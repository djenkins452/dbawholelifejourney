# Whole Life Journey - Environment Variables
# Copy this file to .env and fill in your values

# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (Railway provides DATABASE_URL automatically)
DATABASE_URL=postgres://user:password@localhost:5432/whole_life_journey

# Email (Resend)
RESEND_API_KEY=re_your_api_key_here
DEFAULT_FROM_EMAIL=noreply@wholelifejourney.com

# Weather API (for future use)
WEATHER_API_KEY=your_openweathermap_key_here

# Security (set these in production)
CSRF_TRUSTED_ORIGINS=https://wholelifejourney.com
SECURE_SSL_REDIRECT=False
