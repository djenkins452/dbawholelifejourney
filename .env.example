# =============================================================================
# Whole Life Journey - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
#
# LOCAL DEVELOPMENT: Only SECRET_KEY, DEBUG, and ALLOWED_HOSTS are required
# PRODUCTION (Railway): Set all variables in Railway's environment settings
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED - Django Core Settings
# -----------------------------------------------------------------------------

# Generate a new secret key for production:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=dev-secret-key-change-in-production-use-long-random-string

# Set to False in production
DEBUG=True

# Comma-separated list of allowed hosts
# Local: localhost,127.0.0.1
# Production: your-app.railway.app,wholelifejourney.com
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# DATABASE - Automatic in Railway
# -----------------------------------------------------------------------------

# Railway provides DATABASE_URL automatically when you add PostgreSQL
# Leave blank/commented for local development to use SQLite
# DATABASE_URL=postgres://user:password@host:5432/dbname

# -----------------------------------------------------------------------------
# AI FEATURES (OpenAI)
# -----------------------------------------------------------------------------

# Required for AI coaching insights on dashboard
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# -----------------------------------------------------------------------------
# EMAIL (Resend) - Production Only
# -----------------------------------------------------------------------------

# Get your API key at: https://resend.com
# Not needed for local dev - emails print to console
# RESEND_API_KEY=re_your_api_key_here
DEFAULT_FROM_EMAIL=noreply@wholelifejourney.com

# -----------------------------------------------------------------------------
# SECURITY - Production Only
# -----------------------------------------------------------------------------

# Must be False for local development (no HTTPS)
SECURE_SSL_REDIRECT=False

# Required in production for CSRF protection
# CSRF_TRUSTED_ORIGINS=https://your-app.railway.app,https://wholelifejourney.com

# -----------------------------------------------------------------------------
# GOOGLE CALENDAR INTEGRATION (Optional)
# -----------------------------------------------------------------------------

# Get credentials at: https://console.cloud.google.com/apis/credentials
# GOOGLE_CALENDAR_CLIENT_ID=your-client-id.apps.googleusercontent.com
# GOOGLE_CALENDAR_CLIENT_SECRET=your-client-secret

# Production only - set to your production callback URL
# GOOGLE_CALENDAR_REDIRECT_URI=https://your-app.railway.app/life/calendar/google/callback/

# -----------------------------------------------------------------------------
# BIBLE API (Optional - for Faith module Scripture lookups)
# -----------------------------------------------------------------------------

# Get your free API key at: https://scripture.api.bible/
# Without this key, Bible translation selection will show "API not configured"
# BIBLE_API_KEY=your-api-key-here
